# Development Dockerfile with hot reload
FROM node:20-alpine
WORKDIR /app

# Install dependencies for better compatibility
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./
RUN npm ci

# Expose Vite port
EXPOSE 5173

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]