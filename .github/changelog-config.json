{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## 🐛 Bug Fixes",
      "labels": ["bug", "fix"]
    },
    {
      "title": "## 🧪 Tests",
      "labels": ["test", "tests"]
    },
    {
      "title": "## 📚 Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## 🏗️ Infrastructure",
      "labels": ["infrastructure", "ci/cd"]
    },
    {
      "title": "## 🔄 Refactoring",
      "labels": ["refactor", "refactoring"]
    }
  ],
  "ignore_labels": ["ignore"],
  "sort": "ASC",
  "template": "${{CHANGELOG}}\n\n**Full Changelog**: ${{RELEASE_DIFF}}",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}}) @${{AUTHOR}}",
  "empty_template": "- No changes",
  "label_extractor": [
    {
      "pattern": "^(feat|feature)",
      "label": "feature"
    },
    {
      "pattern": "^fix",
      "label": "bug"
    },
    {
      "pattern": "^docs",
      "label": "documentation"
    },
    {
      "pattern": "^test",
      "label": "test"
    },
    {
      "pattern": "^ci",
      "label": "ci/cd"
    },
    {
      "pattern": "^refactor",
      "label": "refactor"
    }
  ],
  "duplicate_filter": {
    "pattern": "^.*",
    "on_property": "title",
    "method": "match"
  },
  "reference": {
    "pattern": ".*"
  }
}